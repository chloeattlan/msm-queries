<h1> List of all movies </h1>
<table border = "1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Title
    </th>

    <th>
      Year
    </th>

    <th>
      Director
    </th>

    <th>
    </th>
  </tr>
  <% Movie.all.each do |movie|%>
  <tr>
      <th> <%= movie.id%> </th>
      <th> <img src = "<%= movie.image%>" width = "100"> </th>
      <th> <%= movie.title%> </th>
      <th> <%= movie.year%> </th>
      <th> <% matching=Director.where({ :id => movie.director_id})%>
      <%= matching[0].name%> </th>
      <th> 
      <a href = "/movies/<%=movie.id %>">Show details</a> </th>
  </tr>
<% end%>
